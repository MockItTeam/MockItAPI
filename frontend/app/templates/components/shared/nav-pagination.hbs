<div class='pagination-summary'>
  {{paginationRange}} of {{pagination.total_count}}
</div>

<div class='pager-container'>
  <ul class='pager'>
    <li class="{{if pagination.prev_page 'active' 'disabled'}}">
      <a class="pagination-previous" href="#previous" {{action 'pagination' pagination.prev_page on='click'}}><i
        class="fa fa-angle-left"></i></a>
    </li>
    <li class="{{if pagination.next_page 'active' 'disabled'}}">
      <a class="pagination-next" href="#next" {{action 'pagination' pagination.next_page on='click'}}><i
        class="fa fa-angle-right"></i></a>
    </li>
  </ul>
</div>
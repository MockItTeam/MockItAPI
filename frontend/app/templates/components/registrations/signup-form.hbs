<div class='auth-form-container'>
  <form {{action 'createAccount' on='submit'}} autocomplete='off' class='form-body'>

    {{#if successMessage}}
      <div class='form-group'>
        <div class='alert alert-success'>
          <p>{{successMessage}}</p>
        </div>
      </div>
    {{/if}}

    {{#if errorMessage}}
      <div class='form-group'>
        <div class='alert alert-danger'>
          <p>{{errorMessage}}</p>
        </div>
      </div>
    {{/if}}

    <div class='form-group row'>
      <label for='username' class='col-xs-12 col-sm-12 col-md-3 form-label'>USERNAME</label>
      <div class='col-xs-12 col-sm-12 col-md-9'>
        {{input autocomplete='off' id='username-field' type='text' name='username' value=identification key-down='typeUsername'
        placeholder='Username' required=true autofocus=true class='form-control'}}
      </div>
    </div>

    <div class='form-group row'>
      <label for='pincode' class='col-xs-12 col-sm-12 col-md-3 form-label'>
        PIN CODE <span class='additional-label'>4 - DIGITS</span>
      </label>

      <div class='col-xs-12 col-sm-12 col-md-5'>
        {{input autocomplete='off' type='number' focus-in='onFocus' name='pincode' class='form-control pin-form-control' maxlength=1 id='0' key-down='typePinDown' key-up='typePin'}}
        {{input autocomplete='off' type='number' focus-in='onFocus' name='pincode' class='form-control pin-form-control' maxlength=1 id='1' key-down='typePinDown' key-up='typePin'}}
        {{input autocomplete='off' type='number' focus-in='onFocus' name='pincode' class='form-control pin-form-control' maxlength=1 id='2' key-down='typePinDown' key-up='typePin'}}
        {{input autocomplete='off' type='number' focus-in='onFocus' name='pincode' class='form-control pin-form-control' maxlength=1 id='3' key-down='typePinDown' key-up='typePin'}}
      </div>
    </div>

    <div class='form-group row'>
      <label for='pincode' class='col-xs-12 col-sm-12 col-md-3 form-label'>
        PIN CODE CONFIRMATION
      </label>

      <div class='col-xs-12 col-sm-12 col-md-5'>
        {{input autocomplete='off' type='number' focus-in='onFocus' name='pincode' class='form-control pin-form-control' maxlength=1 id='4' key-down='typePinDown' key-up='typePin'}}
        {{input autocomplete='off' type='number' focus-in='onFocus' name='pincode' class='form-control pin-form-control' maxlength=1 id='5' key-down='typePinDown' key-up='typePin'}}
        {{input autocomplete='off' type='number' focus-in='onFocus' name='pincode' class='form-control pin-form-control' maxlength=1 id='6' key-down='typePinDown' key-up='typePin'}}
        {{input autocomplete='off' type='number' focus-in='onFocus' name='pincode' class='form-control pin-form-control' maxlength=1 id='7' key-down='typePinDown' key-up='typePin'}}
      </div>
    </div>

    <div class='form-group row'>
      <div class='col-xs-4 col-sm-4 col-md-6'>
        <span class='additional-label form-link'>
          {{#link-to 'sessions.new'}}
            I HAVE AN ACCOUNT
          {{/link-to}}
        </span>
      </div>

      <div class='col-xs-8 col-sm-8 col-md-6'>
         {{input key-down='typeLogin' type='submit' id='submit-btn' class='btn btn-primary btn-signup' value='Create an account' }}
      </div>
    </div>
  </form>
</div>
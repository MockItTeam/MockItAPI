<div class='auth-form-container'>
  <form {{action 'createAccount' on='submit'}} class='form-body'>

    {{#if successMessage}}
      <div class='form-group'>
        {{shared.alert-message type='success' message=successMessage}}
      </div>
    {{/if}}

    {{#if errorMessage}}
      <div class='form-group'>
        {{shared.alert-message type='danger' message=errorMessage}}
      </div>
    {{/if}}

    <div class='form-group row'>
      <label for='username' class='col-xs-12 col-sm-12 col-md-3 form-label'>USERNAME</label>
      <div class='col-xs-12 col-sm-12 col-md-9'>
        {{input type='text' name='username' value=identification
        placeholder='Username' required=true autofocus=true class='form-control'}}
      </div>
    </div>

    <div class='form-group row'>
      <label for='pincode' class='col-xs-12 col-sm-12 col-md-3 form-label'>
        PIN CODE <span class='additional-label'>4 - DIGITS</span>
      </label>

      <div class='col-xs-12 col-sm-12 col-md-5'>
        {{input type='password' name='pincode' class='form-control pin-form-control' maxlength=1 id='0' key-up='typePin'}}
        {{input type='password' name='pincode' class='form-control pin-form-control' maxlength=1 id='1' key-up='typePin'}}
        {{input type='password' name='pincode' class='form-control pin-form-control' maxlength=1 id='2' key-up='typePin'}}
        {{input type='password' name='pincode' class='form-control pin-form-control' maxlength=1 id='3' key-up='typePin'}}
      </div>
    </div>

    <div class='form-group row'>
      <label for='pincode' class='col-xs-12 col-sm-12 col-md-3 form-label'>
        PIN CODE CONFIRMATION
      </label>

      <div class='col-xs-12 col-sm-12 col-md-5'>
        {{input type='password' name='pincode' class='form-control pin-form-control' maxlength=1 id='00' key-up='typePinConfirmation'}}
        {{input type='password' name='pincode' class='form-control pin-form-control' maxlength=1 id='01' key-up='typePinConfirmation'}}
        {{input type='password' name='pincode' class='form-control pin-form-control' maxlength=1 id='02' key-up='typePinConfirmation'}}
        {{input type='password' name='pincode' class='form-control pin-form-control' maxlength=1 id='03' key-up='typePinConfirmation'}}
      </div>
    </div>

    <div class='form-group row'>
      <div class='col-xs-4 col-sm-4 col-md-6'>
        <span class='additional-label form-link'>
          {{#link-to 'sessions.new'}}
            I HAVE AN ACCOUNT
          {{/link-to}}
        </span>
      </div>

      <div class='col-xs-8 col-sm-8 col-md-6'>
        <button class='btn btn-primary btn-signup'>CREATE ACCOUNT</button>
      </div>
    </div>
  </form>
</div>
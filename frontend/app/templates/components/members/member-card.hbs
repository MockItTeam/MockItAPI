<div class='app-card-image-container'>
  <div class='member-image'>{{member.firstLetter}}</div>
</div>

<div class='app-card-name'>{{member.username}}</div>

{{#if isOwner}}
  {{#if canManage}}
    <div class='member-menu dropdown'>
      <button class='btn btn-icon' data-toggle="dropdown">
        <span class='fa fa-bars'></span>
      </button>

      <div class='dropdown-menu manage-user'>
        <a {{action 'transferOwner' member}} class='nav-link' href="#">
          <i class='icon icon-plus fa fa-plus'></i>
          Transfer owner
        </a>
        <div class='dropdown-divider'></div>
        <a {{action 'kickMember' member}} href="#">
          <i class='icon icon-minus fa fa-minus'></i>
          Kick
        </a>
      </div>
    </div>
  {{/if}}
{{/if}}
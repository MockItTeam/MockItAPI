{{#if success}}
  <div class='form-group'>
    {{shared.alert-message type='success' message=success}}
  </div>
{{/if}}

{{#if errorMessage}}
  <div class='form-group'>
    {{shared.alert-message type='danger' message=errorMessage}}
  </div>
{{/if}}

<form class='form-body'>
  <fieldset class='project-list'>
    <legend>
      <div class='legend-header'>
        Projects <span>( {{projects.length}} )</span>
      </div>

      <div class='filter-group'>
        <div class='form-group form-search col-xs-8 col-sm-8'>
          {{input class='form-control' name='search-project' value=projectSearch placeholder='name' key-up='searchProject'}}
        </div>

        <div class='form-group col-xs-4 col-sm-4'>
          {{#x-select action='filterProjects' class='form-control c-select' default='all'}}
            {{#x-option value='all'}}All{{/x-option}}
            {{#x-option value='yours'}}Yours{{/x-option}}
            {{#x-option value='shared'}}Shared{{/x-option}}
          {{/x-select}}
        </div>
      </div>
    </legend>

    {{#if projects}}
      <div class='app-card-container'>
        {{#each projects as |project|}}
          {{projects.project-card project=project owner=project.owner deleteProject='applyDeleteProject'}}
        {{/each}}
      </div>
    {{else}}
      <div class='blank-state'>
        <div class='content-container'>
          <p>Don't have any projects</p>
        </div>
      </div>
    {{/if}}
  </fieldset>
</form>
<br><br>
<h3>Owner</h3>
{{project.owner.username}}
<br>
<h3>Member</h3>
{{#each project.members as |member|}}
  {{#unless member.isOwner}}
    {{member.username}}
    {{#if canKick }}
      <button {{action 'kickMember' member}} class='kick-button'>Kick</button>
    {{/if}}
    {{#if canAssign }}
      <button {{action 'assignOwner' member}} class='assign-button'>Assign</button>
    {{/if}}
    <br>
  {{/unless}}
{{/each}}
<br>
<h3>Mockups</h3>
{{#each project.mockups as |mockup|}}
  {{#link-to 'protected.projects.detail.mockups.detail' mockup.id }}
    {{mockup.description}}
  {{/link-to}}
  <br>
{{/each}}
<br>
<span {{action "toggleAddOption"}}>add</span>
{{#if isShowingAddOption}}
    <p><span {{action "createNewMockup"}}>create mockup</span></p>
    <p><span {{action "toggleAddMockup"}}>upload mockup</span></p>
    {{#if isShowingAddMockup}}
      <p>{{mockups.new-form project=project}}</p>
    {{/if}}
{{/if}}
<br><br>

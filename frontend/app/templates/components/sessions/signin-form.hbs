<div class='auth-form-container'>
  <form {{action 'authenticate' on='submit'}} class='form-body'>

    {{#if successMessage}}
      <div class='form-group'>
        <div class='alert alert-success'>
          <p>{{successMessage}}</p>
        </div>
      </div>
    {{/if}}

    {{#if errorMessage}}
      <div class='form-group'>
        <div class='alert alert-danger'>
          <p>{{errorMessage}}</p>
        </div>
      </div>
    {{/if}}

    <div class='form-group row'>
      <label for='username' class='col-xs-12 col-sm-12 col-md-3 form-label'>USERNAME</label>
      <div class='col-xs-12 col-sm-12 col-md-9'>
        {{input type='text' name='username' value=identification
        placeholder='Username' required=true autofocus=true class='form-control'}}
      </div>
    </div>

    <div class='form-group row'>
      <label for='pincode' class='col-xs-12 col-sm-12 col-md-3 form-label'>
        PIN CODE <span class='additional-label'>4 - DIGITS</span>
      </label>

      <div class='col-xs-8 col-sm-8 col-md-5'>
        {{input type='password' name='pincode' class='form-control pin-form-control' maxlength=1 id='0' key-up='moveOnMax'}}
        {{input type='password' name='pincode' class='form-control pin-form-control' maxlength=1 id='1' key-up='moveOnMax'}}
        {{input type='password' name='pincode' class='form-control pin-form-control' maxlength=1 id='2' key-up='moveOnMax'}}
        {{input type='password' name='pincode' class='form-control pin-form-control' maxlength=1 id='3' key-up='moveOnMax'}}

        <div class='additional-label form-link'>
          {{#link-to 'sessions.new'}}
            FORGOT YOUR PIN?
          {{/link-to}}
        </div>
      </div>

      <div class='col-xs-4 col-sm-4 col-md-4'>
        <button class='btn btn-primary btn-login'>LOGIN</button>
      </div>
    </div>
  </form>
</div>
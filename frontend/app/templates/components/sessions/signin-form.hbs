<div class='auth-form-container'>
  <form {{action 'authenticate' on='submit'}} class="form-body">

    {{#if successMessage}}
      <div class="form-group">
        <div class="alert alert-success">
          <p>{{successMessage}}</p>
        </div>
      </div>
    {{/if}}

    {{#if errorMessage}}
      <div class="form-group">
        <div class="alert alert-danger">
          <p>{{errorMessage}}</p>
        </div>
      </div>
    {{/if}}

    <div class="form-group">
      {{input type='text' name='email' value=identification
      placeholder='Username' required=true autofocus=true class='form-control'}}
    </div>

    <div class="form-group">
      {{input type='password' name='password' value=password
      placeholder='Password' required=true class='form-control'}}
    </div>

    <div class="form-group">
      <button class='btn btn-primary'>
        <span>Sign in</span>
      </button>
    </div>
  </form>
</div>